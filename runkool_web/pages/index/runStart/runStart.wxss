/* pages/index/runStart/runStart.wxss */
page,.container{
  height:100%;
  padding:0;
}
/* 地图 */
.location{
  position: absolute;
  width:100%;
  height:60%;
}
.location map{
  width:100%;
  height:100%;
}
.location map .controles{
  position: absolute;
  right:36rpx;
  bottom:36rpx;
  background:url('https://img1.baidu.com/it/u=1237332478,2787165537&fm=26&fmt=auto&gp=0.jpg') no-repeat;
  background-size:cover;
  border-radius:50%;
  overflow: hidden;
  width:86rpx;
  height:86rpx;
  z-index:99;
}

.mask,.loading,.runCont{
  position: absolute;
  top:60%;
  left:0;
  width:100%;
  height:40%;
}
.mask{
  background-color: transparent;
}
/* 加载等待 */
.loading{
  /* line-height:40%; */
  font-size:120rpx;
  color:gray;
  text-align: center;
}
/* 跑步数据 */
.runCont > view{
  width:100%;
  line-height:80rpx;
  display: flex;
  margin-top:36rpx;
}
.runCont .text{
  padding:0 36rpx;
  margin-right:12rpx;
  background-color:white;
  color:green;
}
.runCont .butGroups{
  height:100rpx;
  justify-content: space-around;
}
.runCont button{
  line-height:100rpx;
  padding:0;
}
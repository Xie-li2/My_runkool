/* pages/my/addAct/addAct.wxss */
.box{
  display: block;
  width:100%;
  height:100%;
}
.box>view{
  box-sizing: border-box;
  width:100%;
  height:120rpx;
  line-height:120rpx;
  display: flex;
  background-color:white;
  margin-top:36rpx;
  border-radius:12rpx;
  padding-left:36rpx;
  padding-right:36rpx;
}
.box .img>view{
  width:100%;
  text-align: center;
}
.box .img>image{
  width:100%;
  height:100rpx;
  border-radius:12rpx;
  margin-top:12rpx;
}
.box>view input{
  margin-top:36rpx;
}
.box radio-group{
  display: flex;
}
.box button{
  margin-top:42rpx;
}
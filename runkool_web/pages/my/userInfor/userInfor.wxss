/* pages/my/userInfor/userInfor.wxss */
.container{
  padding:0;
  padding-top:24rpx;
}
/* 条项公共设置 */
.container>view{
  width:88%;
  line-height:108rpx;
  display: flex;
  justify-content: space-between;
  padding:0 24rpx;
  background-color:#ffe3fe;
  border-radius:16rpx;
  margin:0 auto;
  border-bottom:2rpx solid #b4a8a3;
}
.container>view:first-child{
  line-height:142rpx;
}
.container>view:first-child image{
  width:120rpx;
  height:120rpx;
  margin-top:12rpx;
  border-radius:18rpx;
}
/* 左文本 */
.container>view text{
  color:black;
}
/* 右文本 */
.container>view>view{
  display: flex;
  font-size:32rpx;
  color:#b4a8a3;
}
/* 图标 */
.container>view>view mp-icon{
  width:24rpx;
  height:0;
  line-height:104rpx;
}
.container>view>view .mp-icon{
  line-height:142rpx;
}
/* 提交按钮 */
.container button{
  margin:24rpx auto 0;
}
/* 遮幕 */
.container .mask{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  border:none;
  display:block;
  justify-content: initial;
  background-color:transparent;
}
.container .mask .cont{
  width:72%;
  height:42%;
  display:block;
  border-radius:12rpx;
  margin:212rpx auto 0;
  background-color:#ff49de;
}
.container .mask .cont text{
  display: block;
  width:100%;
  line-height:120rpx;
  text-align: center;
  font-size:52rpx;
  color: gray;
  border-bottom:2rpx solid #ecedff;
}
.container .mask  .cont .inputBox{
  width:72%;
  line-height:120rpx;
  margin:42rpx auto;
  text-align: center;
  background-color:white;
  padding-left:24rpx;
}
.container .mask  .cont .inputBox input{
  font-size:52rpx;
  height:84rpx;
  margin-top:12rpx;
}
/* 确认/取消按钮 */
.container .mask  .cont .buttonBox{
  display: flex;
  width:80%;
  margin:0 auto;
}
.container .mask  .cont .buttonBox button{
  margin-left:12rpx;
}